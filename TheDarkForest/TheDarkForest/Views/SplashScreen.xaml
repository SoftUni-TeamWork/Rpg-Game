<UserControl x:Class="TheDarkForest.Views.SplashScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheDarkForest"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
    	<Canvas.Background>
    		<ImageBrush x:Name="brush" ImageSource="../Resources/Images/splash-screen.jpg"/>
    	</Canvas.Background>
        <TextBlock Name="WelcomeText"
                   Panel.ZIndex="2" 
                   TextAlignment="Center" 
                   Text="Welcome to the Dark Forest" 
                   Background="Transparent"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="60"
                   FontWeight="Bold"
                   Loaded="WelcomeTextOnLoadedCenter">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FFF" />
            </TextBlock.Effect>
        </TextBlock>
    </Canvas>
</UserControl>
